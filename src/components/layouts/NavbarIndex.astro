        class: 'nav-link redes fab fa-instagram',
      },
      {
        alt: 'Facebook',
        href: 'https://www.facebook.com/PatagoniAscent',
        class: 'nav-link redes fab fa-facebook',
      },
      {
        alt: 'YouTube',
        href: 'https://www.youtube.com/channel/UCMqFsAQ6I0cjByx82SaIQRg',
        class: 'nav-link redes fab fa-youtube',
      },
      {
        alt: 'WhatsApp',
        href: 'https://wa.me/542966464845/',
        class: 'nav-link redes fab fa-whatsapp',
      },
    ],
  },
]
const links = [
  {
    name: 'NOSOTROS',
    href: '#nosotros',
  },
  {
    name: 'MONTAÑA',
    href: '#montana',
  },
  {
    name: 'ESCALADA',
    href: '#escalada',
  },
  {
    name: 'ESQUÍ',
    href: '#esqui',
  },
  {
    name: 'EXPERIENCIA CRESTON',
    href: '#experiencia-creston',
  },
  {
    name: 'CURSOS',
    href: '#cursos',
  },
  // {
  //   name: 'CONTACT US',
  //   href: '/',
  //   isExternal: 'false',
  // },
]
const logos = [
  {
    img: '../img/index/aagm.png',
    href: 'https://www.aagm.com.ar/',
    alt: 'AAGM',
  },
  {
    img: '../img/index/uiagm.png',
    href: 'https://ifmga.info/',
    alt: 'UIAGM',
  }
