const redes = [
      {
        alt: 'Instagram',
        href: 'https://www.instagram.com/patagonia_ascent/',
        icon: '',
        class: 'fs-5 nav-link py-1 ps-0 pe-2 text-body-secondary fab fa-instagram',
      },
      {
        alt: 'Facebook',
        href: 'https://www.facebook.com/PatagoniAscent',
