---


<div class="container px-4 px-lg-5">
  <footer class="row row-cols-1 row-cols-sm-1 row-cols-md-5 pt-5 my-5 border-top">
    <div class="col mb-3">
      <a href="/" class="d-flex align-items-center mb-1 link-body-emphasis text-decoration-none">
        <h5 class="fw-light text-body-secondary"><span class="fw-medium">PATAGONIA</span>SCENT</h5>
      </a>
      <p class="text-body-secondary fw-light">&copy; {new Date().getFullYear()} - Todos los derechos reservados.</p>
    </div>

    <div class="col mb-3">
    </div>

    <div class="col mb-3">
      <h6 class="fw-light text-body-secondary">SOCIOS</h6>
      <ul class="nav">
        {logos.map((logo) => (
          <li class="nav-item me-3">
            <a href={logo.href} target="_blanck" aria-current="page">
              <img class="ml-4" src={logo.img} alt={logo.alt} width="62px" height="64px"/>
            </a>
          </li>
        )
      )}
      </ul>
    </div>

    <div class="col mb-3">
      <h6 class="fw-light text-body-secondary">SEGUINOS</h6>
      <ul class="nav">
        {
          redes.map((red)=> (
            <li class="nav-item mb-2"><a target="_blanck" class={red.class} href={red.href} aria-label={red.alt}></a></li>
          )
        )}
      </ul>
    </div>

    <div class="col mb-3">
      <h6 class="fw-light text-body-secondary">MAPA DE SITIO</h6>
      <ul class="nav flex-column">
        {
          links.map((link)=>(
          <li class="nav-item mb-0"><a href={link.href} class="nav-link p-0 text-body-secondary fw-light">{link.name}</a></li>
          )
        )}
      </ul>
    </div>

    
  </footer>
</div>

