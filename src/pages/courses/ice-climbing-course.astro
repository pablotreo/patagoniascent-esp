    srcFotos: '/img/paginas/slider/courses/ice-climbing/cursohielo7.jpg',
    srcThum: '/img/paginas/slider/courses/ice-climbing/cursohielothumb7.jpg',
  },
  {
    alt: 'Ice Climbing Course',
    srcFotos: '/img/paginas/slider/courses/ice-climbing/cursohielo9.jpg',
    srcThum: '/img/paginas/slider/courses/ice-climbing/cursohielothumb9.jpg',
  },
  {
    alt: 'Ice Climbing Course',
    srcFotos: '/img/paginas/slider/courses/ice-climbing/cursohielo3.jpg',
    srcThum: '/img/paginas/slider/courses/ice-climbing/cursohielothumb3.jpg',
  },
  {
