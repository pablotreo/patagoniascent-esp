const fotos = [
  {
    alt: 'Rock Climbing Course',
    srcFotos: '/img/paginas/slider/courses/rock-climbing/cursoroca1.jpg',
    srcThum: '/img/paginas/slider/courses/rock-climbing/cursorocaMINI1.jpg',
  },
  {
    alt: 'Rock Climbing Course',
    srcFotos: '/img/paginas/slider/courses/rock-climbing/cursoroca4.jpg',
    srcThum: '/img/paginas/slider/courses/rock-climbing/cursorocaMINI4.jpg',
  },
  {
    alt: 'Rock Climbing Course',
    srcFotos: '/img/paginas/slider/courses/rock-climbing/cursoroca10.jpg',
    srcThum: '/img/paginas/slider/courses/rock-climbing/cursorocaMINI10.jpg',
  },
  {
    alt: 'Rock Climbing Course',
    srcFotos: '/img/paginas/slider/courses/rock-climbing/cursoroca8.jpg',
    srcThum: '/img/paginas/slider/courses/rock-climbing/cursorocaMINI8.jpg',
  },
  {
    alt: 'Rock Climbing Course',
    srcFotos: '/img/paginas/slider/courses/rock-climbing/cursoroca7.jpg',
