          duration=' 2 días'
          pax=' 1 o 2 personas'
          time=' Octubre a Marzo'
          hrefitinerary='/itinerarios/montana/CerroElectrico.pdf'

          link1=' Montaña'
          href1='/#montana'
          link2=' Cerro Eléctrico'
          href2='/montana/cerro-electrico'

